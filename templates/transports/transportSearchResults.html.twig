{% extends "baseAdmin.html.twig" %}

{% block titre %}Résultats de recherche | Transport{% endblock %}

{% block content %}
<div class="search-results-container">
    <h2>Résultats pour votre recherche</h2>
    
    <div class="search-parameters">
        <p><strong>Trajet :</strong> {{ departure }} → {{ destination }}</p>
        <p><strong>Date :</strong> {{ date|date('d/m/Y') }}</p>
        <p><strong>Passagers :</strong> {{ passengers }}</p>
    </div>
    
    <div class="results-list">
        {# Ici vous afficherez les résultats réels de votre recherche #}
        <div class="no-results">
            <i class="fas fa-search"></i>
            <p>Fonctionnalité de recherche en cours de développement</p>
            <a href="{{ path('app_transports') }}" class="btn btn-primary">
                Retour à l'accueil
            </a>
        </div>
    </div>
</div>
{% endblock %}