            <div class="form-row">
                <div class="form-group">
                    <label for="departure"><i class="fas fa-map-marker-alt"></i> Départ</label>
                    <input type="text" id="departure" name="departure" placeholder="Ville ou gare de départ" required>
                </div>
                
                <div class="form-group">
                    <label for="destination"><i class="fas fa-map-marker"></i> Destination</label>
                    <input type="text" id="destination" name="destination" placeholder="Ville ou gare d'arrivée" required>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="date"><i class="fas fa-calendar"></i> Date</label>
                    <input type="date" id="date" name="date" required>
                </div>
                
                <div class="form-group">
                    <label for="passengers"><i class="fas fa-users"></i> Passagers</label>
                    <select id="passengers" name="passengers">
                        <option value="1">1 passager</option>
                        <option value="2">2 passagers</option>
                        <option value="3">3 passagers</option>
                        <option value="4">4 passagers</option>
                        <option value="5">5 passagers</option>
                        <option value="6">6 passagers</option>
