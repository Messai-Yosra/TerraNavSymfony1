{% extends 'baseClient.html.twig' %}

{% block title %}Liste des chambres{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des chambres</h1>
            <a href="{{ path('app_chambre_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter une chambre
            </a>
        </div>

        {% if chambres is empty %}
            <div class="alert alert-info">
                Aucune chambre trouvée.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Numéro</th>
                            <th>Disponibilité</th>
                            <th>Prix</th>
                            <th>Capacité</th>
                            <th>Taille</th>
                            <th>Hébergement</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for chambre in chambres %}
                            <tr>
                                <td>{{ chambre.numero }}</td>
                                <td>
                                    <span class="badge bg-{{ chambre.disponibilite ? 'success' : 'danger' }}">
                                        {{ chambre.disponibilite ? 'Disponible' : 'Indisponible' }}
                                    </span>
                                </td>
                                <td>{{ chambre.prix }}</td>
                                <td>{{ chambre.capacite ?? '—' }}</td>
                                <td>{{ chambre.taille ? chambre.taille ~ ' m²' : '—' }}</td>
                                <td>
                                    {% if chambre.id_hebergement %}
                                        {{ chambre.id_hebergement.id }}
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}" 
                                           class="btn btn-info" 
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" 
                                           class="btn btn-warning" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('app_chambre_delete', {'id': chambre.id}) }}" 
                                              method="post" 
                                              class="d-inline"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette chambre ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}">
                                            <button type="submit" class="btn btn-danger" title="Supprimer">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}