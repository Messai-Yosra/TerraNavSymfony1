{% extends 'baseClient.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block content %}
    <h1>Chambre index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Numero</th>
            <th>Disponibilite</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Capacite</th>
            <th>Equipements</th>
            <th>Vue</th>
            <th>Taille</th>
            <th>Url_3d</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.numero }}</td>
                <td>{{ chambre.disponibilite ? 'Yes' : 'No' }}</td>
                <td>{{ chambre.prix }}</td>
                <td>{{ chambre.description }}</td>
                <td>{{ chambre.capacite }}</td>
                <td>{{ chambre.equipements }}</td>
                <td>{{ chambre.vue }}</td>
                <td>{{ chambre.taille }}</td>

                <td>
                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chambre_new') }}">Create new</a>
{% endblock %}
