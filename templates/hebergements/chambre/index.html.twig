{% extends 'baseClient.html.twig' %}

{% block title %}Liste des chambres{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des chambres</h1>
            <a href="{{ path('app_chambre_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter une chambre
            </a>
        </div>

        {% if chambres|length == 0 %}
            <div class="alert alert-info">
                Aucune chambre trouvée.
            </div>
        {% else %}
            <div class="row">
                {% for chambre in chambres %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            {# Image Carousel #}
                            {% if chambre.images is defined and chambre.images|length > 0 %}
                                <div id="carousel-{{ chambre.id }}" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        {% for image in chambre.images %}
                                            <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                                                <img src="{{ (image.urlImage) }}" 
                                                     class="d-block w-100" 
                                                     alt="Chambre {{ chambre.numero }} - Image {{ loop.index }}"
                                                     style="height: 200px; object-fit: cover;">
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {% if chambre.images|length > 1 %}
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{ chambre.id }}" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-{{ chambre.id }}" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    {% endif %}
                                </div>
                            {% else %}
                                <div class="text-center py-4 bg-light" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                    <p class="text-muted">Aucune image</p>
                                </div>
                            {% endif %}

                            {# Card Body #}
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">Chambre {{ chambre.numero }}</h5>
                                    <span class="badge bg-{{ chambre.disponibilite ? 'success' : 'danger' }}">
                                        {{ chambre.disponibilite ? 'Disponible' : 'Indisponible' }}
                                    </span>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-6">
                                        <p class="mb-1"><i class="fas fa-euro-sign text-primary me-2"></i> <strong>{{ chambre.prix|number_format(2, ',', ' ') }} €</strong></p>
                                        <p class="mb-1"><i class="fas fa-users text-info me-2"></i> {{ chambre.capacite }} pers.</p>
                                    </div>
                                    <div class="col-6">
                                        <p class="mb-1"><i class="fas fa-ruler-combined text-warning me-2"></i> {{ chambre.taille }} m²</p>
                                        <p class="mb-1"><i class="fas fa-home text-secondary me-2"></i> 
                                            {% if chambre.id_hebergement %}
                                                {{ chambre.id_hebergement.nom ?? chambre.id_hebergement.id }}
                                            {% else %}
                                                <span class="text-muted">—</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>

                            {# Card Footer - Actions #}
                            <div class="card-footer bg-white border-top-0">
                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Détails
                                    </a>
                                    <div class="btn-group">
                                        <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" 
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('app_chambre_delete', {'id': chambre.id}) }}" 
                                              method="post" 
                                              class="d-inline"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette chambre ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Pagination #}
            {% if totalItems > itemsPerPage %}
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Pagination">
                        <ul class="pagination">
                            {% if currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_chambre_index', {page: currentPage - 1}) }}">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            {% endif %}

                            {% for i in 1..((totalItems / itemsPerPage)|round(0, 'ceil')) %}
                                <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('app_chambre_index', {page: i}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}

                            {% if currentPage < (totalItems / itemsPerPage)|round(0, 'ceil') %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_chambre_index', {page: currentPage + 1}) }}">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            {% endif %}
        {% endif %}
    </div>

    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border-radius: 10px;
            overflow: hidden;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .carousel-control-prev, .carousel-control-next {
            background-color: rgba(0,0,0,0.2);
            width: 30px;
            height: 30px;
            top: 50%;
            transform: translateY(-50%);
            border-radius: 50%;
        }
        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
{% endblock %}