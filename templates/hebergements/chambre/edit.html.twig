{% extends 'baseClient.html.twig' %}

{% block title %}Modifier la chambre {{ chambre.numero }}{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Modifier la chambre <span class="text-primary">{{ chambre.numero }}</span></h1>
            <div class="btn-group">
                <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye"></i> Voir
                </a>
                <a href="{{ path('app_chambre_index') }}" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Liste
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                    <div class="col-md-6">
                        {{ form_row(form.numero, {
                            'attr': {'class': 'form-control'},
                            'label': 'Numéro'
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.disponibilite, {
                            'attr': {'class': 'form-check-input'},
                            'label': 'Disponible',
                            'label_attr': {'class': 'form-check-label'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.prix, {
                            'attr': {'class': 'form-control'},
                            'label': 'Prix (€)'
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.capacite, {
                            'attr': {'class': 'form-control'},
                            'label': 'Capacité'
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.taille, {
                            'attr': {'class': 'form-control'},
                            'label': 'Taille (m²)'
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.vue, {
                            'attr': {'class': 'form-control'},
                            'label': 'Vue'
                        }) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(form.description, {
                            'attr': {'class': 'form-control', 'rows': 3},
                            'label': 'Description'
                        }) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(form.equipements, {
                            'attr': {'class': 'form-control', 'rows': 3},
                            'label': 'Équipements'
                        }) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(form.url_3d, {
                            'attr': {'class': 'form-control'},
                            'label': 'Visite 3D',
                            'help': 'URL complète commençant par http:// ou https://'
                        }) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(form.hebergement, {
                            'attr': {'class': 'form-select'},
                            'label': 'Hébergement'
                        }) }}
                    </div>

                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-3">
            {{ include('hebergements/chambre/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}