{% extends 'base.html.twig' %}

{% block title %}
    {% if form.vars.value.id %}Modifier{% else %}Créer{% endif %} une chambre
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">{% if form.vars.value.id %}Modifier{% else %}Créer{% endif %} une chambre</h1>

        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
            <div class="col-md-6">
                {{ form_row(form.numero, {
                    'attr': {'class': 'form-control'},
                    'label': 'Numéro'
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.disponibilite, {
                    'attr': {'class': 'form-check-input'},
                    'label': 'Disponibilité'
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.prix, {
                    'attr': {'class': 'form-control'},
                    'label': 'Prix (€)'
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.capacite, {
                    'attr': {'class': 'form-control'},
                    'label': 'Capacité'
                }) }}
            </div>

            <div class="col-12">
                {{ form_row(form.description, {
                    'attr': {'class': 'form-control', 'rows': 3},
                    'label': 'Description'
                }) }}
            </div>

            <div class="col-12">
                {{ form_row(form.equipements, {
                    'attr': {'class': 'form-control', 'rows': 3},
                    'label': 'Équipements'
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.vue, {
                    'attr': {'class': 'form-control'},
                    'label': 'Vue'
                }) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.taille, {
                    'attr': {'class': 'form-control'},
                    'label': 'Taille (m²)'
                }) }}
            </div>

            <div class="col-12">
                {{ form_row(form.url_3d, {
                    'attr': {'class': 'form-control'},
                    'label': 'URL visite 3D'
                }) }}
            </div>

            <div class="col-12">
                {{ form_row(form.hebergement, {
                    'attr': {'class': 'form-select'},
                    'label': 'Hébergement associé'
                }) }}
            </div>

            <div class="col-12 mt-4">
                <button type="submit" class="btn btn-primary">
                    {% if form.vars.value.id %}Mettre à jour{% else %}Créer{% endif %}
                </button>
                <a href="{{ path('app_chambre_index') }}" class="btn btn-secondary ms-2">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}