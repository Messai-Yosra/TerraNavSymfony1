{% extends 'baseAdmin.html.twig' %}

{% block title %}Admin - Chambres{% endblock %}

{% block body %}
<div class="container-fluid p-4">
    <h1 class="h3 mb-4">
        <i class="fas fa-bed me-2"></i> Gestion des Chambres (Admin)
    </h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Statistiques</h5>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Total chambres
                            <span class="badge bg-primary rounded-pill">{{ stats.total }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Chambres disponibles
                            <span class="badge bg-success rounded-pill">{{ stats.disponibles }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Liste des Chambres</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Numéro</th>
                        <th>Disponibilité</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for chambre in chambres %}
                    <tr>
                        <td>{{ chambre.numero }}</td>
                        <td>
                            <span class="badge {{ chambre.disponibilite ? 'bg-success' : 'bg-danger' }}">
                                {{ chambre.disponibilite ? 'Disponible' : 'Occupée' }}
                            </span>
                        </td>
                        <td>{{ chambre.prix|number_format(2, ',', ' ') }} TND</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}