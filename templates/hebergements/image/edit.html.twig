{% extends 'baseClient.html.twig' %}

{% block title %}Modifier l'Image #{{ image.id }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modifier l'image #{{ image.id }}</h1>
        <div class="btn-group">
            <a href="{{ path('app_image_show', {'id': image.id}) }}" class="btn btn-info">
                <i class="fas fa-eye"></i> Voir
            </a>
            <a href="{{ path('app_image_index') }}" class="btn btn-secondary">
                <i class="fas fa-list"></i> Liste
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
            <img src="{{ image.urlImage }}" alt="Image actuelle" 
                 class="img-fluid rounded mb-3" style="max-height: 300px;">
            <p class="text-muted">Image actuelle</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                <div class="col-12">
                    {{ form_row(form.url_image, {
                        'attr': {'class': 'form-control'},
                        'label': 'Nouvelle URL'
                    }) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.id_chambre, {
                        'attr': {'class': 'form-select'},
                        'label': 'Chambre associ√©e'
                    }) }}
                </div>

                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="{{ path('app_image_show', {'id': image.id}) }}" 
                       class="btn btn-outline-secondary ms-2">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}