{% extends 'baseClient.html.twig' %}

{% block title %}{{ hebergement.nom }}{% endblock %}

{% block content %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">Détails de l'hébergement</h6>
                <h1 class="mb-5">{{ hebergement.nom }}</h1>
            </div>
            
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid w-100" src="{{ asset('img/hebergement-default.jpg') }}" alt="{{ hebergement.nom }}">
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">{{ hebergement.nom }}</h5>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>{{ hebergement.ville }}, {{ hebergement.pays }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-light rounded p-5">
                        <h4 class="mb-4">Informations détaillées</h4>
                        
                        <div class="mb-4">
                            <h5 class="text-primary">Description</h5>
                            <p>{{ hebergement.description }}</p>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="text-primary">Adresse</h5>
                            <p>{{ hebergement.adresse }}<br>{{ hebergement.ville }}, {{ hebergement.pays }}</p>
                        </div>
                        
                        {% if hebergement.services is defined %}
                        <div class="mb-4">
                            <h5 class="text-primary">Services</h5>
                            <p>{{ hebergement.services }}</p>
                        </div>
                        {% endif %}
                        
                        {% if hebergement.politique_annulation is defined %}
                        <div class="mb-4">
                            <h5 class="text-primary">Politique d'annulation</h5>
                            <p>{{ hebergement.politique_annulation }}</p>
                        </div>
                        {% endif %}
                        
                        {% if hebergement.contact is defined %}
                        <div class="mb-4">
                            <h5 class="text-primary">Contact</h5>
                            <p>{{ hebergement.contact }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <a href="{{ path('app_hebergement_index') }}" class="btn btn-secondary py-3 px-5 me-3">Retour à la liste</a>
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="btn btn-primary py-3 px-5 me-3">Modifier</a>
                        
                        <form method="post" action="{{ path('app_hebergement_delete', {'id': hebergement.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet hébergement?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hebergement.id) }}">
                            <button class="btn btn-danger py-3 px-5">Supprimer</button>
                        </form>
                    {% endif %}
                </div>
            </div>
            
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <a href="{{ path('app_hebergement_index') }}" class="btn btn-secondary py-3 px-5 me-3">Retour à la liste</a>
                    <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="btn btn-primary py-3 px-5 me-3">Modifier</a>
                    
                    <form method="post" action="{{ path('app_hebergement_delete', {'id': hebergement.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet hébergement?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hebergement.id) }}">
                        <button class="btn btn-danger py-3 px-5">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
