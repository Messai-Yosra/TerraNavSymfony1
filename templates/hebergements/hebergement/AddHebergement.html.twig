{% extends 'baseClient.html.twig' %}

{% block title %}Ajouter hébergement{% endblock %}

{% block content %}
    <!-- Booking Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">Ajout d'un Hébergement</h6>
                <h1 class="mb-5">Ajouter un <span class="text-primary text-uppercase">hébergement</span></h1>
            </div>
            <div class="row g-5">
                <div class="col-lg-12">
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_row(form.name) }}
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    {{ form_row(form.description) }}
                                </div>
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.submit) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
