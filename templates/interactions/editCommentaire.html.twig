{% extends 'baseClient.html.twig' %}

{% block titre %}Modifier un commentaire{% endblock %}

{% block content %}
<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
<link href="{{ asset('css/styleClient.css') }}" rel="stylesheet">
    <div class="container mt-4">
        <h2>Modifier votre commentaire</h2>

        <div class="card p-3">
            <h4>Post associ√© :</h4>
            <p><strong>{{ commentaire.id_Post.description }}</strong></p>
            {% if commentaire.id_Post.image %}
                <img src="{{ asset('img/' ~ commentaire.id_Post.image) }}" alt="Image du post" class="img-fluid">
            {% endif %}
        </div>

        <div class="mt-3">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.contenu, 'Modifier votre commentaire :') }}
                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-success">Modifier</button>
            {{ form_end(form) }}
        </div>
        
        <a href="{{ path('app_post_show', {'id': commentaire.id_Post.id}) }}" class="btn btn-secondary mt-2">Annuler</a>
    </div>
{% endblock %}
