{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des Publications{% endblock %}

{% block content %}

<link href="{{ asset('css/interactions/interactionsAdmin.css') }}" rel="stylesheet">
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">
        <i class="fas fa-newspaper me-2"></i>Gestion des Publications
    </h1>

    <div class="card shadow-sm">
        <!-- Header avec recherche et filtre -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-table me-2"></i>Liste des publications</h5>
            <div class="d-flex gap-2">
                <input type="text" class="form-control form-control-sm" placeholder="Rechercher..." id="searchInput">
                <button class="btn btn-light btn-sm" type="button" data-bs-toggle="tooltip" title="Filtrer">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        </div>

        <!-- Tableau des publications -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>ID</th>
                        <th>Auteur</th>
                        <th>Description</th>
                        <th>Statut</th>
                        <th>Date</th>
                        <th>Média</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr class="{{ post.statut == 'traitée' ? 'table-success' : '' }}">
                            <td class="text-center fw-bold">{{ post.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-circle me-2 text-secondary"></i>
                                    {{ post.id_user.username }}
                                </div>
                            </td>
                            <td>
                                <span class="d-inline-block text-truncate" 
                                      style="max-width: 300px;" 
                                      data-bs-toggle="tooltip" 
                                      title="{{ post.description }}">
                                    {{ post.description }}
                                </span>
                            </td>
                            <td class="text-center">
                                {% if post.statut == 'traitée' %}
                                    <span class="badge bg-success rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i> Traitée
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning rounded-pill text-dark">
                                        <i class="fas fa-exclamation-circle me-1"></i> En attente
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-center px-3">
                                {% if post.image %}
                                    <img src="{{ asset('img/' ~ post.image) }}" alt="Image du post" class="img-thumbnail" style="max-width: 100px;">
                                {% else %}
                                    <span class="text-muted fst-italic">Aucun média</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <i class="fas fa-calendar-day me-2 text-secondary"></i>
                                {{ post.date ? post.date|date('d/m/Y H:i') : 'N/A' }}
                            </td>
                            <td class="text-center">
                                <div class="d-flex gap-2 justify-content-center">
                                    {% if post.statut != 'traitée' %}
                                        <a href="{{ path('admin_post_traiter', { id: post.id }) }}" 
                                           class="btn btn-sm btn-success rounded-circle"
                                           data-bs-toggle="tooltip"
                                           title="Marquer comme traitée">
                                            <i class="fas fa-check"></i>
                                        </a>
                                    {% endif %}
                                    <button type="button" 
                                            class="btn btn-sm btn-danger rounded-circle" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal"
                                            data-post-id="{{ post.id }}"
                                            data-post-author="{{ post.id_user.username }}">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-3"></i><br>
                                Aucune publication à afficher
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


<script>
    // Script pour gérer le modal de suppression
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const postId = button.getAttribute('data-post-id');
        const postAuthor = button.getAttribute('data-post-author');
        const confirmDeleteButton = document.getElementById('confirmDeleteButton');

        document.getElementById('modalPostAuthor').textContent = postAuthor;
        confirmDeleteButton.href = "{{ path('admin_post_delete', { id: 'POST_ID' }) }}".replace('POST_ID', postId);
    });
</script>

{% endblock %}