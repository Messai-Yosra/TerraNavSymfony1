{% extends 'baseClient.html.twig' %}

{% block titre %}Chat - Posts{% endblock %}

{% block content %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/styleClient.css') }}">
    <link rel="stylesheet" href="{{ asset('css/interactions/interactions.css') }}">
    <div class="container mt-5 fade-in">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="fas fa-comments"></i> Liste des Posts</h2>
            <a href="{{ path('app_post_new') }}" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Ajouter un Post
            </a>
        </div>

        {% if posts is not empty %}
            <div class="row">
                {% for post in posts %}
                    <div class="col-md-10 mx-auto mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-dark"><i class="fas fa-thumbtack me-2"></i>{{ post.description }}</h5>
                                
                                <p class="card-text text-muted mb-2">
                                    <span><i class="fas fa-calendar-alt"></i> <strong>Date :</strong> {{ post.date ? post.date|date('d/m/Y H:i') : 'Non défini' }}</span>
                                </p>

                                {% if post.image %}
                                    <img src="{{ asset('img/' ~ post.image) }}" alt="Image du post" class="post-image">
                                {% endif %}

                                <div class="mt-3">
                                    <span class="badge bg-primary me-2"><i class="fas fa-heart"></i> {{ post.nbReactions }} réactions</span>
                                    <span class="badge bg-secondary"><i class="fas fa-comment"></i> {{ post.nbCommentaires }} commentaires</span>
                                </div>

                                <div class="mt-4 d-flex flex-wrap gap-2">
                                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <a href="{{ path('app_post_delete', {'id': post.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </a>
                                    <a href="{{ path('app_post_details', {'id': post.id}) }}" class="btn btn-info">
                                        <i class="fas fa-eye"></i> Détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">Aucun post trouvé.</div>
        {% endif %}
    </div>
{% endblock %}
