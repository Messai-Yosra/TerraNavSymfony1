    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const currencySelect = document.getElementById('currencySelect');
            const convertedAmount = document.getElementById('convertedAmount');
            const originalPrice = {{ voyage.prix }};
            const loadingText = '<i class="fas fa-spinner fa-spin"></i> Conversion en cours...';

            currencySelect.addEventListener('change', async function() {
                const targetCurrency = this.value;
                convertedAmount.innerHTML = loadingText;

                try {
                    const response = await fetch('/convert', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify({
                            amount: originalPrice,
                            from: 'TND',
                            to: targetCurrency
                        })
                    });

                    const data = await response.json();

                    if (data.success) {
                        const flagIcon = this.options[this.selectedIndex].getAttribute('data-icon');
                        const currencySymbol = getCurrencySymbol(targetCurrency);
                        convertedAmount.innerHTML = `
                    <img src="${flagIcon}" alt="${targetCurrency}" width="20" class="me-1">
                     ${data.convertedAmount.toFixed(2)} ${currencySymbol}
                `;
                    } else {
                        convertedAmount.textContent = 'Erreur de conversion';
                    }
                } catch (error) {
                    console.error('Erreur:', error);
                    convertedAmount.textContent = 'Service temporairement indisponible';
                }
            });

            function getCurrencySymbol(currency) {
                const symbols = {
                    'EUR': '€',
                    'USD': '$',
                    'DZD': 'DA',
                    'RUB': '₽',
                    'GBP': '£'
                };
                return symbols[currency] || '';
            }
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateBtn = document.getElementById('generateActivities');
            const activitiesModal = new bootstrap.Modal(document.getElementById('activitiesModal'));
            const activitiesContent = document.getElementById('activitiesContent');
            const copyBtn = document.getElementById('copyActivities');

            generateBtn.addEventListener('click', async function() {
                activitiesModal.show();
                activitiesContent.innerHTML = `
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
                <p class="mt-3">Chargement des activités...</p>
            </div>`;

                try {
                    const response = await fetch(`/get-activities/{{ voyage.destination|escape('js') }}`);

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const data = await response.json();

                    if (data.success) {
                        let html = '';

                        if (data.activities && data.activities.length > 0) {
                            data.activities.forEach(activity => {
                                html += `
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                ${activity.image ? `
                                <img src="${activity.image}"
                                     class="card-img-top"
                                     alt="${activity.name}"
                                     style="height: 150px; object-fit: cover;"
                                     onerror="this.src='https://via.placeholder.com/300x200?text=Activité'">
                                ` : `
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                     style="height: 150px;">
                                    <i class="fas fa-map-marker-alt fa-3x text-muted"></i>
                                </div>
                                `}
                                <div class="card-body">
                                    <h5 class="card-title">${activity.name}</h5>
                                    <p class="card-text text-muted">${activity.description}</p>
                                </div>
                            </div>
                        </div>`;
                            });
                        } else {
                            html = `
                    <div class="col-12 text-center py-4">
                        <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                        <p>Aucune activité trouvée pour cette destination</p>
                    </div>`;
                        }

                        activitiesContent.innerHTML = html;
                    } else {
                        activitiesContent.innerHTML = `
                <div class="col-12 text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <p>${data.error || 'Erreur lors du chargement des activités'}</p>
                    <button class="btn btn-sm btn-outline-primary" onclick="window.location.reload()">
                        <i class="fas fa-sync-alt me-1"></i> Réessayer
                    </button>
                </div>`;
                    }
                } catch (error) {
                    console.error('Error:', error);
                    activitiesContent.innerHTML = `
            <div class="col-12 text-center py-4">
                <i class="fas fa-unplug fa-3x text-danger mb-3"></i>
                <p>Problème de connexion au service: ${error.message}</p>
            </div>`;
                }
            });

            copyBtn.addEventListener('click', function() {
                const activitiesText = Array.from(document.querySelectorAll('#activitiesContent .card-title'))
                    .map(el => el.textContent)
                    .join('\n- ');

                navigator.clipboard.writeText(`Activités recommandées :\n- ${activitiesText}`)
                    .then(() => {
                        const originalText = copyBtn.innerHTML;
                        copyBtn.innerHTML = '<i class="fas fa-check me-1"></i>Copié!';
                        setTimeout(() => {
                            copyBtn.innerHTML = originalText;
                        }, 2000);
                    });
            });
        });
    </script>


