    <script>
        // Fonction debounce pour limiter les appels fréquents
        const debounce = (func, delay) => {
            let timeout;
            return function() {
                const context = this;
                const args = arguments;
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(context, args), delay);
            };
        };

        document.addEventListener('DOMContentLoaded', function() {
            // Création de l'overlay de chargement
            const loadingOverlay = document.createElement('div');
            loadingOverlay.className = 'loading-overlay';
            loadingOverlay.innerHTML = `
            <div class="d-flex flex-column align-items-center">
                <div class="custom-spinner mb-3"></div>
                <p class="text-primary fw-bold">Chargement des voyages...</p>
            </div>
        `;
            document.body.appendChild(loadingOverlay);

            // Gestion unifiée des changements de filtres
            const handleFilterChange = debounce(() => {
                loadingOverlay.style.display = 'flex';
                const form = document.getElementById('filterForm');
                form.classList.add('loading-filters');
                setTimeout(() => form.submit(), 100);
            }, 500);

            // Configuration des écouteurs d'événements pour les filtres
            const filterElements = [
                document.getElementById('minPlaces'),
                document.getElementById('type'),
                document.getElementById('sort'),
                document.getElementById('onSale')
            ];

            filterElements.forEach(element => {
                if (element) element.addEventListener('change', handleFilterChange);
            });

            // Gestion spécifique pour l'input number
            const minPlacesInput = document.getElementById('minPlaces');
            if (minPlacesInput) {
                minPlacesInput.addEventListener('input', handleFilterChange);
            }

            // Gestion des sliders de prix
            const minPriceSlider = document.getElementById('minPriceSlider');
            const maxPriceSlider = document.getElementById('maxPriceSlider');
            const minPriceValue = document.getElementById('minPriceValue');
            const maxPriceValue = document.getElementById('maxPriceValue');
            const minPriceInput = document.getElementById('minPrice');
            const maxPriceInput = document.getElementById('maxPrice');

            const updatePriceSliders = () => handleFilterChange();

            if (minPriceSlider && maxPriceSlider) {
                minPriceSlider.addEventListener('input', function() {
                    const value = this.value;
                    minPriceValue.textContent = `${value} DT`;
                    minPriceInput.value = value;

                    if (parseInt(value) > parseInt(maxPriceSlider.value)) {
                        maxPriceSlider.value = value;
                        maxPriceValue.textContent = `${value} DT`;
                        maxPriceInput.value = value;
                    }
                    updatePriceSliders();
                });

                maxPriceSlider.addEventListener('input', function() {
                    const value = this.value;
                    maxPriceValue.textContent = `${value} DT`;
                    maxPriceInput.value = value;

                    if (parseInt(value) < parseInt(minPriceSlider.value)) {
                        minPriceSlider.value = value;
                        minPriceValue.textContent = `${value} DT`;
                        minPriceInput.value = value;
                    }
                    updatePriceSliders();
                });
            }

            // Gestion de la recherche avec suggestions
            const searchInput = document.getElementById('searchInput');
            const suggestionsContainer = document.getElementById('searchSuggestions');

            if (searchInput) {
                searchInput.addEventListener('input', debounce(async function() {
                    const query = this.value.trim();

                    if (query.length < 2) {
                        suggestionsContainer.classList.add('d-none');
                        return;
                    }

                    try {
                        const response = await fetch(`{{ path('app_voyages_suggestions') }}?q=${encodeURIComponent(query)}`);
                        if (!response.ok) throw new Error('Network response was not ok');

                        const suggestions = await response.json();

                        if (suggestions.length > 0) {
                            suggestionsContainer.innerHTML = suggestions.map(suggestion =>
                                `<a href="#" class="list-group-item list-group-item-action" data-suggestion="${suggestion.titre}">
                                ${suggestion.titre}
                            </a>`
                            ).join('');
                            suggestionsContainer.classList.remove('d-none');
                        } else {
                            suggestionsContainer.classList.add('d-none');
                        }
                    } catch (error) {
                        console.error('Erreur de recherche:', error);
                        suggestionsContainer.classList.add('d-none');
                    }
                }, 300));

                suggestionsContainer.addEventListener('click', function(e) {
                    if (e.target.classList.contains('list-group-item')) {
                        e.preventDefault();
                        searchInput.value = e.target.dataset.suggestion;
                        suggestionsContainer.classList.add('d-none');
                    }
                });

                document.addEventListener('click', function(e) {
                    if (!searchInput.contains(e.target) && !suggestionsContainer.contains(e.target)) {
                        suggestionsContainer.classList.add('d-none');
                    }
                });
            }

            // Ajout des styles pour l'overlay
            const style = document.createElement('style');
            style.textContent = `
            .loading-overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(255,255,255,0.85);
                z-index: 9999;
                display: none;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }
        `;
            document.head.appendChild(style);
        });
        function resetFilters() {
            // Réinitialiser les sliders de prix
            document.getElementById('minPriceSlider').value = 0;
            document.getElementById('maxPriceSlider').value = 10000;
            document.getElementById('minPrice').value = 0;
            document.getElementById('maxPrice').value = 10000;
            document.getElementById('minPriceValue').textContent = '0 DT';
            document.getElementById('maxPriceValue').textContent = '10000 DT';

            // Réinitialiser les autres champs
            document.getElementById('minPlaces').value = '';
            document.getElementById('type').value = 'all';
            document.getElementById('sort').selectedIndex = 0;
            document.getElementById('onSale').checked = false;

            // Soumettre le formulaire
            window.location.href = "{{ path('app_voyages') }}";
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const weatherModal = new bootstrap.Modal(document.getElementById('weatherModal'));

            document.querySelectorAll('.weather-link').forEach(link => {
                link.addEventListener('click', async function(e) {
                    e.preventDefault();
                    const destination = this.dataset.destination;

                    // Afficher le modal et le loader
                    document.getElementById('weatherDestination').textContent = destination;
                    document.getElementById('weatherLoading').style.display = 'flex';
                    document.getElementById('weatherContent').style.display = 'none';
                    document.getElementById('weatherError').style.display = 'none';

                    weatherModal.show();

                    try {
                        const response = await fetch(`/voyage/weather/${encodeURIComponent(destination)}`);
                        const data = await response.json();

                        if (!response.ok || data.error) {
                            throw new Error(data.message || 'Erreur inconnue');
                        }

                        // Afficher les données météo
                        document.getElementById('weatherIcon').src = data.weather_icon;
                        document.getElementById('weatherDescription').textContent = data.weather_descriptions;
                        document.getElementById('weatherTemp').textContent = data.temperature;
                        document.getElementById('weatherWind').textContent = data.wind_speed;
                        document.getElementById('weatherHumidity').textContent = data.humidity;
                        document.getElementById('weatherFeelslike').textContent = data.feelslike;

                        document.getElementById('weatherLoading').style.display = 'none';
                        document.getElementById('weatherContent').style.display = 'block';
                    } catch (error) {
                        console.error('Error fetching weather:', error);
                        document.getElementById('weatherLoading').style.display = 'none';
                        document.getElementById('weatherError').style.display = 'block';
                        document.getElementById('weatherError').textContent =
                            error.message || 'Impossible de charger les données météo pour cette destination.';
                    }
                });
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchAmadeusBtn = document.getElementById('searchAmadeusBtn');

            if (searchAmadeusBtn) {
                searchAmadeusBtn.addEventListener('click', async function() {
                    const searchTerm = '{{ searchTerm ?? '' }}';

                    // Afficher loading
                    searchAmadeusBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Recherche en cours...';
                    searchAmadeusBtn.disabled = true;

                    try {
                        const response = await fetch(`{{ path('app_search_amadeus') }}?search=${encodeURIComponent(searchTerm)}`);
                        const data = await response.json();

                        if (data.success) {
                            if (data.results.length > 0) {
                                displayAmadeusResults(data.results);
                            } else {
                                alert('Aucun vol trouvé vers cette destination');
                            }
                        } else {
                            alert(data.message);
                        }
                    } catch (error) {
                        console.error(error);
                        alert('Erreur technique');
                    } finally {
                        searchAmadeusBtn.innerHTML = '<i class="fas fa-search me-2"></i>Voir les suggestions de notre partenaire';
                        searchAmadeusBtn.disabled = false;
                    }
                });
            }

            function displayAmadeusResults(flights) {
                const container = document.getElementById('amadeusResultsContainer');
                const resultsDiv = document.getElementById('amadeusResults');

                // Clear previous results and button if any
                resultsDiv.innerHTML = '';
                const existingBtn = document.querySelector('.amadeus-redirect-btn');
                if (existingBtn) existingBtn.remove();

                // Generate flight cards
                resultsDiv.innerHTML = flights.map(flight => {
                    const defaultImageUrl = "{{ asset('img/amadeus-default.jpg') }}";
                    const departureDate = new Date(flight.itineraries[0].segments[0].departure.at);
                    const arrivalDate = new Date(flight.itineraries[0].segments.slice(-1)[0].arrival.at);
                    const duration = flight.itineraries[0].duration.replace(/PT|H|M/g, ' ').trim();

                    return `
                <div class="col-lg-4 col-md-6 wow fadeInUp">
                    <div class="room-item shadow rounded overflow-hidden h-100">
                        <div class="position-relative">
                            <img class="img-fluid w-100"
                                 src="${defaultImageUrl}"
                                 alt="Vol ${flight.itineraries[0].segments[0].departure.iataCode} à ${flight.itineraries[0].segments[0].arrival.iataCode}"
                                 style="height: 200px; object-fit: cover;">
                        </div>

                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">
                                    ${flight.itineraries[0].segments[0].departure.iataCode} →
                                    ${flight.itineraries[0].segments[0].arrival.iataCode}
                                </h5>
                                <div class="ps-2">
                                    ${'<small class="fa fa-star text-primary"></small>'.repeat(5)}
                                </div>
                            </div>

                            <div class="price-display mb-3">
                                <span class="fw-bold fs-4 text-primary">${flight.price.total} ${flight.price.currency}</span>
                            </div>

                            <div class="d-flex flex-column gap-2 mb-3">
                                <div>
                                    <i class="fas fa-plane-departure text-primary me-2"></i>
                                    <small>Départ: ${departureDate.toLocaleString()}</small>
                                </div>
                                <div>
                                    <i class="fas fa-plane-arrival text-primary me-2"></i>
                                    <small>Arrivée: ${arrivalDate.toLocaleString()}</small>
                                </div>
                                <div>
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    <small>Durée: ${duration}</small>
                                </div>
                                <div>
                                    <i class="fas fa-plane text-primary me-2"></i>
                                    <small>Compagnie: ${flight.itineraries[0].segments[0].carrierCode}</small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button class="btn btn-sm btn-outline-primary rounded-pill py-2 px-4"
                                   onclick="showFlightDetails('${flight.id}')">
                                    <i class="fas fa-info-circle me-2"></i>Détails
                                </button>
                                <button class="btn btn-sm btn-primary rounded-pill py-2 px-4"
                                   onclick="bookFlight('${flight.id}')">
                                    <i class="fas fa-ticket-alt me-2"></i>Réserver
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                `;
                }).join('');

                // Add redirect button after all flights
                const redirectButton = document.createElement('div');
                redirectButton.className = 'text-center mt-4 mb-5 amadeus-redirect-btn';
                redirectButton.innerHTML = `
                <a href="https://www.amadeus.com/fr"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="btn btn-primary btn-lg"
                   style="padding: 12px 30px; font-weight: 600;">
                    <i class="fas fa-external-link-alt me-2"></i>
                    Explorer toutes les offres sur Amadeus
                </a>
                <p class="text-muted mt-2">Vous serez redirigé vers le site officiel d'Amadeus</p>
            `;
                container.appendChild(redirectButton);

                container.style.display = 'block';

                // Animation pour l'apparition des résultats
                const cards = document.querySelectorAll('#amadeusResults .wow');
                cards.forEach((card, index) => {
                    card.style.animationDelay = `${0.1 * index}s`;
                });
            }

            // Placeholder functions for flight actions
            window.showFlightDetails = function(flightId) {
                alert('Détails du vol: ' + flightId + '\n(Fonctionnalité à implémenter)');
            };

            window.bookFlight = function(flightId) {
                alert('Réservation du vol: ' + flightId + '\n(Fonctionnalité à implémenter)');
            };
        });
    </script>

