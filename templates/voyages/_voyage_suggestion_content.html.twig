<div class="voyage-suggestion-content">
    <p class="text-muted mb-3">{{ suggestion_text }}</p>

    <div class="voyage-preview mb-4 p-3 bg-light rounded">
        <h5 class="text-center mb-3">{{ voyage.titre }}</h5>
        <div class="row">
            <div class="col-md-6">
                <p><i class="fas fa-map-marker-alt text-primary me-2"></i> <strong>Itinéraire:</strong> De {{ voyage.pointDepart }} à {{ voyage.destination }}</p>
                <p><i class="fas fa-tag text-primary me-2"></i> <strong>Type:</strong> {{ voyage.type }}</p>
            </div>
            <div class="col-md-6">
                <p><i class="fas fa-money-bill-wave text-primary me-2"></i> <strong>Prix:</strong> {{ voyage.prix }} DT</p>
                <p><i class="fas fa-users text-primary me-2"></i> <strong>Places:</strong> {{ voyage.nbPlacesD }}</p>
            </div>
        </div>
        <div class="mt-3">
            <h6>Description:</h6>
            <p class="text-muted">{{ voyage.description }}</p>
        </div>
    </div>

    <div class="d-none">
        <a href="{{ path('app_ajout_voyage_ia', {
            'titre': voyage.titre,
            'destination': voyage.destination,
            'pointDepart': voyage.pointDepart,
            'type': voyage.type,
            'prix': voyage.prix,
            'nbPlacesD': voyage.nbPlacesD,
            'description': voyage.description,
            'dateDepart': voyage.dateDepart|date('Y-m-d'),
            'dateRetour': voyage.dateRetour|date('Y-m-d')
        }) }}" class="btn btn-primary" id="suggestionLink">
            <i class="fas fa-check me-1"></i> Voir proposition
        </a>
    </div>
</div>

<script>
    // Mettre à jour le bouton du modal parent quand le contenu est chargé
    document.addEventListener('DOMContentLoaded', function() {
        const link = document.getElementById('suggestionLink');
        if (link) {
            document.getElementById('useSuggestionBtn').href = link.href;
        }
    });
</script>