<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block titre %}{% endblock %}</title>
{% block stylesheets %}
        <!-- Font Awesome -->
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Admin CSS -->
        <link rel="stylesheet" href="{{ asset('css/styleAdmin.css') }}">
    {% endblock %}
</head>
<body>
{% macro is_active_route(current_route, target_route) %}
    {% if current_route == target_route %}active{% endif %}
{% endmacro %}
<div class="page-container">
    {% block navigation %}
        <div id="nav-bar">
            <input id="nav-toggle" type="checkbox"/>
            <div id="nav-header"><a id="nav-title" href="{{ path('admin_dashboard') }}"><i class="fab fa-codepen"></i>ADMIN</a>
                <label for="nav-toggle"><span id="nav-toggle-burger"></span></label>
                <hr/>
            </div>
            <div id="nav-content">
                <a href="{{ path('admin_dashboard') }}" class="nav-button {{ app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}">
                    <i class="fas fa-tachometer-alt"></i><span>Dashboard</span>
                </a>
                <a href="{{ path('admin_reclamation') }}" class="nav-button {{ app.request.get('_route') == 'admin_reclamation' ? 'active' : '' }}">
                    <i class="fas fa-exclamation-circle"></i><span>Reclamations</span>
                </a>
                <a href="{{ path('admin_reservations') }}" class="nav-button {{ app.request.get('_route') == 'admin_reservations' ? 'active' : '' }}">
                    <i class="fas fa-calendar-check"></i><span>Reservations</span>
                </a>
                <hr/>
                <a href="{{ path('admin_voyages') }}" class="nav-button {{ app.request.get('_route') == 'admin_voyages' ? 'active' : '' }}">
                    <i class="fas fa-suitcase-rolling"></i><span>Voyages</span>
                </a>
                <a href="{{ path('admin_hebergements') }}" class="nav-button {{ app.request.get('_route') == 'admin_hebergements' ? 'active' : '' }}">
                    <i class="fas fa-hotel"></i><span>Hebergements</span>
                </a>
                <a href="{{ path('admin_transports_list') }}" class="nav-button {{ app.request.get('_route') == 'admin_transports_list' ? 'active' : '' }}">
                    <i class="fas fa-bus"></i><span>Transports</span>
                </a>
                <hr/>
                <a href="{{ path('admin_publications') }}" class="nav-button {{ app.request.get('_route') == 'admin_publications' ? 'active' : '' }}">
                    <i class="fas fa-newspaper"></i><span>Publications</span>
                </a>
                <a href="{{ path('admin_login_history') }}" class="nav-button {{ app.request.get('_route') == 'admin_login_history' ? 'active' : '' }}">
                    <i class="fas fa-history"></i><span>Historique Connexions</span>
                </a>

                <hr/>
                <a href="{{ path('admin_statistiques') }}" class="nav-button {{ app.request.get('_route') == 'admin_statistiques' ? 'active' : '' }}">
                    <i class="fas fa-chart-line"></i><span>Statistiques</span>
                </a>
                <a href="{{ path('admin_chambres') }}" class="nav-button ">
                    <i class="fas fa-newspaper"></i><span>Chambres</span>
                </a>
                <a href="{{ path('admin_hebergements') }}" class="nav-button ">
                    <i class="fas fa-newspaper"></i><span>Hebergements</span>
                </a>
                
                <hr/>
                <a href="{{ path('app_logout') }}" class="nav-button logout-button">
                    <i class="fas fa-sign-out-alt"></i><span>DÃ©connexion</span>
                </a>
                
                <div id="nav-content-highlight"></div>
            </div>
        </div>
    {% endblock %}

    <div class="content-area">
        {% block content %}{% endblock %}
    </div>

</div>
  {% block javascripts %}
        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <!-- Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Admin JS -->
        <script src="{{ asset('js/mainAdmin.js') }}"></script>
    {% endblock %}
</body>
</html>