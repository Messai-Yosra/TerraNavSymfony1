{% extends 'baseClient.html.twig' %}

{% block titre %}Inscription - TerraNav{% endblock %}

{% block stylesheets %}
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        background: linear-gradient(135deg, #4CA1AF, #2C3E50);
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
        padding: 40px 0;
    }
    
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        margin-bottom: 30px;
    }
    
    .card-header {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        padding: 20px;
        border-bottom: none;
    }
    
    .card-body {
        padding: 30px;
        background-color: #fff;
    }
    
    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        border: 2px solid #e0e0e0;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }
    
    label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        background: linear-gradient(135deg, #2980b9, #1a252f);
    }
    
    .form-section {
        padding: 20px;
        border-radius: 8px;
        background-color: #f8f9fa;
        margin-bottom: 25px;
        border-left: 4px solid #3498db;
    }
    
    .form-section h4 {
        color: #2c3e50;
        margin-bottom: 15px;
    }
    
    .welcome-text {
        text-align: center;
        margin-bottom: 25px;
        color: #7f8c8d;
    }
    
    .login-link {
        color: #3498db;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s;
    }
    
    .login-link:hover {
        color: #2980b9;
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <div class="text-center">
                        <h1 class="mb-0">Bienvenue sur TerraNav</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <p>Créez votre compte en quelques étapes simples et commencez votre voyage avec nous.</p>
                    </div>
                    
                    {{ form_start(form) }}
                        <div class="form-section p-4 mb-4 bg-light rounded">
                            <h4 class="text-primary mb-3">Informations personnelles</h4>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nom, 'Nom') }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.prenom, 'Prénom') }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                                    {{ form_errors(form.prenom) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.email, 'Adresse email') }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@email.com'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        
                        <div class="form-section p-4 mb-4 bg-light rounded">
                            <h4 class="text-primary mb-3">Détails du compte</h4>
                            <div class="mb-3">
                                {{ form_label(form.username, 'Nom d\'utilisateur') }}
                                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Choisissez un nom d\'utilisateur'}}) }}
                                {{ form_errors(form.username) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.password, 'Mot de passe') }}
                                {{ form_widget(form.password, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Créez un mot de passe sécurisé'
                                    }
                                }) }}
                                {{ form_errors(form.password) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.role, 'Type de compte') }}
                                {{ form_widget(form.role, {'attr': {'class': 'form-control', 'id': 'role-select'}}) }}
                                {{ form_errors(form.role) }}
                            </div>
                        </div>
                        
                        <!-- Agency fields section (hidden by default) -->
                        <div id="agency-fields" class="form-section p-4 mb-4 bg-light rounded" style="display:none;">
                            <h4 class="text-primary mb-3">Informations sur l'agence</h4>
                            <div class="mb-3">
                                {{ form_label(form.nomagence, 'Nom de l\'agence') }}
                                {{ form_widget(form.nomagence, {'attr': {'class': 'form-control', 'placeholder': 'Nom de votre agence'}}) }}
                                {{ form_errors(form.nomagence) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.typeAgence, 'Type d\'agence') }}
                                {{ form_widget(form.typeAgence, {'attr': {'class': 'form-control', 'placeholder': 'Type de votre agence'}}) }}
                                {{ form_errors(form.typeAgence) }}
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Créer mon compte</button>
                        </div>
                    {{ form_end(form) }}
                    
                    <div class="mt-4 text-center">
                        <p>Déjà inscrit ? <a href="{{ path('app_login') }}" class="text-primary">Connectez-vous ici</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Script for toggling agency fields
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.getElementById('role-select');
    const agencyFields = document.getElementById('agency-fields');
    
    function toggleAgencyFields() {
        if (roleSelect.value === 'AGENCE') {
            agencyFields.style.display = 'block';
        } else {
            agencyFields.style.display = 'none';
        }
    }
    
    // Set initial state
    toggleAgencyFields();
    
    // Listen for changes
    roleSelect.addEventListener('change', toggleAgencyFields);
});
</script>
{% endblock %}