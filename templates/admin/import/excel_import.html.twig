{% extends 'baseAdmin.html.twig' %}

{% block title %}Import Excel des Chambres{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h2><i class="fas fa-file-excel"></i> Import Excel des Chambres</h2>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-4">
                                <h5>Format du fichier Excel</h5>
                                <p>Le fichier Excel doit contenir les colonnes suivantes dans l'ordre :</p>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Colonne</th>
                                            <th>Description</th>
                                            <th>Format</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>A</td>
                                            <td>Nom de l'hébergement</td>
                                            <td>Texte</td>
                                        </tr>
                                        <tr>
                                            <td>B</td>
                                            <td>Description</td>
                                            <td>Texte</td>
                                        </tr>
                                        <tr>
                                            <td>C</td>
                                            <td>Adresse</td>
                                            <td>Texte</td>
                                        </tr>
                                        <tr>
                                            <td>D</td>
                                            <td>Ville</td>
                                            <td>Texte</td>
                                        </tr>
                                        <tr>
                                            <td>E</td>
                                            <td>Pays</td>
                                            <td>Texte</td>
                                        </tr>
                                        <tr>
                                            <td>F</td>
                                            <td>Prix</td>
                                            <td>Nombre</td>
                                        </tr>
                                        <tr>
                                            <td>G</td>
                                            <td>Email du propriétaire</td>
                                            <td>Email</td>
                                        </tr>
                                        <tr>
                                            <td>H</td>
                                            <td>Chambres</td>
                                            <td>Format: numéro:type;numéro:type</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="mb-3">
                                <label for="excel_file" class="form-label">Sélectionner le fichier Excel</label>
                                <input type="file" class="form-control" id="excel_file" name="excel_file" accept=".xlsx,.xls" required>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_chambres') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-file-import"></i> Importer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 