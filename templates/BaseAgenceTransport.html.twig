        <script>
            // Script pour connecter le sélecteur de langue personnalisé à Google Translate
            document.addEventListener('DOMContentLoaded', function() {
                // Attendre que Google Translate soit chargé
                function waitForGoogleTranslate() {
                    if (window.google && window.google.translate && window.google.translate.TranslateElement) {
                        initCustomLanguageSelector();
                    } else {
                        setTimeout(waitForGoogleTranslate, 100);
                    }
                }
                
                waitForGoogleTranslate();
                
                // Initialiser notre sélecteur personnalisé
                function initCustomLanguageSelector() {
                    const langItems = document.querySelectorAll('.dropdown-item');
                    const languageSelector = document.getElementById('languageSelector');
                    
                    langItems.forEach(item => {
                        item.addEventListener('click', function(e) {
                            // Ne pas traiter les clics sur les éléments du menu profil
                            if (!this.closest('#language-selector-container')) {
                                return;
                            }
                            
                            e.preventDefault();
                            
                            const langCode = this.getAttribute('data-lang');
                            if (!langCode) return; // Ignorer si pas d'attribut data-lang
                            
                            // Récupérer le code de langue
                            const langText = langCode.toUpperCase();
                            
                            // Mettre à jour le texte du bouton
                            languageSelector.innerHTML = `<i class="fas fa-globe me-1"></i> ${langText}`;
                            
                            // Supprimer la classe active de tous les éléments
                            langItems.forEach(l => {
                                if (l.closest('#language-selector-container')) {
                                    l.classList.remove('active');
                                }
                            });
                            
                            // Ajouter la classe active à l'élément sélectionné
                            this.classList.add('active');
                            
                            // Déclencher Google Translate
                            changeLanguageByCode(langCode);
                        });
                    });
                }
                
                // Fonction pour changer de langue via Google Translate
                function changeLanguageByCode(langCode) {
                    // Trouver l'élément iframe généré par Google Translate
                    const gtCombo = document.querySelector('.goog-te-combo');
                    
                    if (gtCombo) {
                        gtCombo.value = langCode;
                        // Déclencher l'événement 'change' pour activer la traduction
                        gtCombo.dispatchEvent(new Event('change'));
                    } else {
                        // Si l'élément n'est pas encore créé, utiliser une autre méthode
                        const selectElement = document.querySelector('.goog-te-menu-value span:first-child');
                        if (selectElement) {
                            selectElement.click();
                            
                            // Attendre que le menu soit ouvert
                            setTimeout(() => {
                                // Trouver l'élément correspondant à la langue
                                const languageOption = document.querySelector('.goog-te-menu2-item div[class*="' + langCode + '"]');
                                if (languageOption) {
                                    languageOption.click();
                                }
                            }, 300);
                        }
                    }
                }
            });
