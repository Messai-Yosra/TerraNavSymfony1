{% block javascripts %}
    {{ parent() }}
    <script>
        // Pour s'assurer que les animations WOW fonctionnent correctement
        new WOW().init();
        
        // Configuration de la date
        $(function() {
            $('#date1, #date2').datetimepicker({
                format: 'L',
                locale: 'fr'
            });
        });

        // Initialisation du testimonial carousel
        $(document).ready(function() {
            $(".testimonial-carousel").owlCarousel({
                autoplay: true,
                smartSpeed: 1000,
                margin: 25,
                dots: false,
                loop: true,
                nav: true,
                navText: [
                    '<i class="fas fa-arrow-left"></i>',
                    '<i class="fas fa-arrow-right"></i>'
                ],
                responsive: {
                    0: {
                        items: 1
                    },
                    768: {
                        items: 2
                    }
                }
            });
            
            // Fonction pour la recherche
            $('.btn-primary.w-100').on('click', function() {
                alert('Pour utiliser la fonction de recherche avancée, veuillez vous connecter.');
                window.location.href = "{{ path('app_login') }}";
            });
        });
    </script>
{% endblock %}