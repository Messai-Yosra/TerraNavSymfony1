{# templates/reset_password/request.html.twig #}
{% extends 'baseClient.html.twig' %}

{% block titre %}Réinitialisation de mot de passe - TerraNav{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center h3">Réinitialiser votre mot de passe</h1>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('danger') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    <p class="mb-4">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Envoyer un email de réinitialisation</button>
                        </div>
                    {{ form_end(requestForm) }}
                    
                    <div class="mt-3 text-center">
                        <a href="{{ path('app_login') }}">Retour à la connexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}