{% extends 'baseClient.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center h3">Définir un nouveau mot de passe</h1>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    
                    {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword.first, {
                            label: 'Nouveau mot de passe'
                        }) }}
                        {{ form_row(resetForm.plainPassword.second, {
                            label: 'Confirmer le mot de passe'
                        }) }}

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Enregistrer le nouveau mot de passe</button>
                        </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}